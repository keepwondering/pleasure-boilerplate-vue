import path from 'path'
import commonjs from 'rollup-plugin-commonjs'
import json from 'rollup-plugin-json'
import alias from 'rollup-plugin-alias'{{#config}}{{#iife}}
import minify from 'rollup-plugin-babel-minify'{{/iife}}{{/config}}
import { name, version, author, license } from './package.json'

const fromSrc = (...paths) => {
  return path.join(__dirname, 'src', ...paths)
}

const plugins = [
  alias({
    src: fromSrc(),
    lib: fromSrc('lib')
  }),
  json(),
  commonjs({
    // non-CommonJS modules will be ignored, but you can also
    // specifically include/exclude files

    // if true then uses of `global` won't be dealt with by this plugin
    ignoreGlobal: true, // Default: false

    // if false then skip sourceMap generation for CommonJS modules
    sourceMap: true // Default: true
  })
]

const banner = `/*!
 * ${ name } v${ version }
 * (c) {{{ year }}}-${ new Date().getFullYear() } ${ author }
 * ${ license }
 */`

export default [
{{#if config.cjs}}
  {
    input: 'src/index.js',
    output: [
      {
        file: `dist/${name}.js`,
        format: 'cjs',
        banner
      },
    ],
    plugins
  },
{{/if}}
{{#if config.esm}}
  {
    input: 'src/index.js',
    output: [
      {
        file: `dist/${name}.esm.js`,
        format: 'esm',
        banner
      }
    ],
    plugins
  },
{{/if}}
{{#if config.iife}}
  {
    input: 'src/index.js',
    output: [
      {
        file: `dist/${name}.iife.js`,
        format: 'iife',
        name: '{{{ iifeName }}}',
        banner
      }
    ],
    plugins: plugins.concat(minify())
  },
{{/if}}
]
